@model CoreAzureWeb.Models.ContactViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>

<div>
    <h2>Contact Us Form</h2>
    <form action="/contact" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" value="@Model.Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" value="@Model.Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject">Subject</label>
            <input type="text" asp-for="Subject" value="@Model.Subject"/>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment">Comments</label>
            <textarea asp-for="Comment">@Model.Comment</textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </form>
</div>